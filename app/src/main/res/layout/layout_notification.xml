<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notification_img"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <ImageView
        android:id="@+id/music_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:src="@drawable/e3i"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/notification_music"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/music_edit">

        <ImageView
            android:id="@+id/notification_last_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/bpe" />

        <ImageView
            android:id="@+id/notification_play_and_pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/cwc" />

        <ImageView
            android:id="@+id/notification_next_music"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/cw9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_music_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/notification_music"
        android:layout_toRightOf="@id/notification_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="歌名"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/notification_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="歌手"
            android:textColor="@android:color/white"
            android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>